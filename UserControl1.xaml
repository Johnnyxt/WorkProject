<UserControl x:Class="JW8307A.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:JW8307A"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <Grid>
        <Border Background="#FFFFCC"
                BorderBrush="#FF6633"
                BorderThickness="3"
                CornerRadius="5">
            <StackPanel Margin="5"
                        HorizontalAlignment="Center"
                        Orientation="Vertical">
                <Image Name="goodsImage"
                       Width="80"
                       Height="80"
                       Margin="5" />
                <TextBlock Name="goodsPrice" Margin="5" />
                <TextBlock Name="goodsQty" Margin="5" />
                <Image Name="goodsBuy"
                       Width="25"
                       Height="25"
                       Margin="5"
                       Cursor="Hand"
                       Source="/images/fbxq_an.gif">
                    <Image.ToolTip>Add Quantity</Image.ToolTip>
                </Image>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>